__shadowenv_hook() {
  local flags; flags=()
  if [[ "$1" == "zsh-preexec" ]]; then
    flags=(--silent)
  fi
  if [[ ! -v __shadowenv_first_run ]]; then
    flags+=(--force)
  fi
  "@SELF@" hook "${flags[@]}" | source /dev/stdin
  __shadowenv_first_run=1
}

@HOOKBOOK@
hookbook_add_hook __shadowenv_hook
